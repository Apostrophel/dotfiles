
# Navigation
alias ll='ls -alF --color=auto'
alias la='ls -A --color=auto'
alias l='ls -CF --color=auto'

# Quick open
alias o='xdg-open'

# Copy last command to clipboard
alias cl="fc -nl -1 | xclip -selection clipboard"

# Safe view for live files
alias liveview='nvim -R +set\ autoread'

# Display configuration aliases (safe versions)
alias laptop-only='xrandr --output eDP-1 --auto --primary --output HDMI-1-0 --off --output DP-1 --off'
alias external-only='if xrandr | grep -q "HDMI-1-0 connected\|DP-1 connected"; then xrandr --output eDP-1 --off --output HDMI-1-0 --mode 1920x1080 --pos 0x0 --primary --output DP-1 --mode 1920x1080 --pos 1920x0; else echo "No external monitors connected - use laptop-only"; fi'
alias all-displays='xrandr --output eDP-1 --auto --output HDMI-1-0 --auto --right-of eDP-1 --output DP-1 --auto --left-of eDP-1'
